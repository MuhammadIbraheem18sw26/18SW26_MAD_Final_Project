<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popularCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popularItem_image"
            android:layout_width="320dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/newproducts"
            app:riv_corner_radius="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/popularItem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="Popular Products"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popularItem_Description"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/popularItem_Img"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/ratinggolden" />

            <TextView
                android:id="@+id/popularItem_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/alice"

                android:text="5.0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularItem_Discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/alice"
                android:gravity="end"
                android:text="Discount 20 %"
                android:textColor="@color/design_default_color_error"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>